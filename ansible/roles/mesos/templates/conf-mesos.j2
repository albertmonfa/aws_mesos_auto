# {{ ansible_managed }}

# special options supported by 
# mesos-init-wrapper
CLUSTER="{{ mesos_cluster_name }}"
IP={{ mesos_ip }}
LOGS={{ mesos_log_location }}
ULIMIT="{{ mesos_ulimit }}"
ZK="zk://{% for zk_node in groups['ec2_mesos_masters'] %}{{ zk_node }}:{{ zookeeper_client_port }}{% if not loop.last %},{% endif %}{% endfor %}/mesos"

# mesos env variables
# see http://mesos.apache.org/documentation/latest/configuration/
export MESOS_HOSTNAME="{{ mesos_hostname }}"
export MESOS_PORT="{{ mesos_port }}"


